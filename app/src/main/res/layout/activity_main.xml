<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:id="@+id/layoutControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress">
        <!-- BOTONES DE DURACION DE LA RONDA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="?textAppearanceCaption"
            android:text="@string/round_duration"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/layoutRoundDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/textRoundTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10"
                android:focusable="false"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textSize="26sp"
                android:layout_marginHorizontal="5dp"
                android:textColor="?textAppearanceCaption"
                android:fontFamily="@font/poppinsbold"
                app:layout_constraintBaseline_toBaselineOf="@+id/timer_break_edit_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/icEditRoundTime"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_edit"
                android:contentDescription="@string/config_button_hint"
                android:background="?selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

    <!-- BOTONES DE DURACION DEL DESCANSO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"

            android:textColor="?textAppearanceCaption"
            android:text="@string/break_duration"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/textBreakTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="?textAppearanceCaption"
                android:textSize="26sp"
                android:focusable="false"
                android:layout_marginHorizontal="5dp"
                android:fontFamily="@font/poppinsbold"
                app:layout_constraintBaseline_toBaselineOf="@+id/timer_break_edit_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <ImageView
                android:id="@+id/icEditBreakTime"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_edit"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/config_button_hint"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
        <!-- BOTONES DE NUMERO DE INTERVALOS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="?textAppearanceCaption"
            android:text="@string/interval"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/roundsNumberPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:np_dividerColor="@color/material_700"
                app:np_max="99"
                app:np_min="1"
                app:np_selectedTextColor="@color/material_300"
                app:np_textColor="?textAppearanceCaption"
                app:np_textSize="12dp"
                app:np_dividerDistance="50dp"
                app:np_orientation="horizontal"
                app:np_wrapSelectorWheel="false"
                app:np_value="1" />
            <EditText
                android:id="@+id/textInvertal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10"
                android:focusable="false"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textSize="26sp"
                android:textColor="?textAppearanceCaption"
                android:layout_marginHorizontal="5dp"
                android:fontFamily="@font/poppinsbold"
                app:layout_constraintBaseline_toBaselineOf="@+id/timer_break_edit_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <ImageView
                android:id="@+id/icEditRounds"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_edit"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/config_button_hint"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutButtonsControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginStart="20dp"
            android:textColor="?textAppearanceCaption"
            tools:text="Botones"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginStart="20dp"
            android:layout_marginVertical="1dp"
            android:textColor="?textAppearanceCaption"
            tools:text="Botones"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_gravity="end">

                <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/ic_circle"
                    android:contentDescription="@string/config_button_hint"
                    android:scaleType="centerInside"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/btnBreakTimeLess"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/ic_less"
                    android:contentDescription="@string/config_button_hint"
                    android:scaleType="centerInside"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_gravity="end">

                <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/ic_circle"
                    android:contentDescription="@string/config_button_hint"
                    android:scaleType="centerInside"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/btnBreakTimePlus"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/ic_plus"
                    android:contentDescription="@string/config_button_hint"
                    android:scaleType="centerInside"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </FrameLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginStart="20dp"
            android:layout_marginVertical="1dp"
            android:textColor="?textAppearanceCaption"
            tools:text="Botones"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_gravity="end">

                <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/ic_circle"
                    android:contentDescription="@string/config_button_hint"
                    android:scaleType="centerInside"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/btnIntervalLess"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/ic_less"
                    android:contentDescription="@string/config_button_hint"
                    android:scaleType="centerInside"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_gravity="end">

                <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/ic_circle"
                    android:contentDescription="@string/config_button_hint"
                    android:scaleType="centerInside"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/btnIntervalPlus"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/ic_plus"
                    android:contentDescription="@string/config_button_hint"
                    android:scaleType="centerInside"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/timer_stop_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="15dp"
            android:background="@drawable/boton_reproducir"
            android:foreground="@drawable/ic_stop" />

        <Button
            android:id="@+id/timer_pause_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="15dp"
            android:background="@drawable/boton_reproducir"
            android:foreground="@drawable/ic_pause"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutTrainingInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/round"
            android:layout_marginHorizontal="5dp"
            android:textSize="26sp"
            android:gravity="center_horizontal"
            android:textColor="?textAppearanceCaption"
            android:fontFamily="@font/poppinsmedium" />
        <TextView
            android:id="@+id/textCurrentRound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            tools:text="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textSize="26sp"
            android:gravity="center_horizontal"
            android:textColor="?textAppearanceCaption"
            android:fontFamily="@font/poppinsbold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="@string/slash"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textSize="26sp"
            android:gravity="center_horizontal"
            android:textColor="?textAppearanceCaption"
            android:fontFamily="@font/poppinsbold" />
        <TextView
            android:id="@+id/textTotalRound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            tools:text="5"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textSize="26sp"
            android:gravity="center_horizontal"
            android:textColor="?textAppearanceCaption"
            android:fontFamily="@font/poppinsbold" />
    </LinearLayout>


    <Button
        android:id="@+id/timer_start_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/boton_reproducir"
        android:foreground="@drawable/ic_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="15dp"
        />

    <TextView
        android:id="@+id/timerInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="14sp"
        android:text="@string/round_duration"
        app:layout_constraintEnd_toEndOf="@+id/progress"
        app:layout_constraintStart_toStartOf="@+id/progress"
        app:layout_constraintBottom_toTopOf="@+id/minutePicker" />

    <TextView
        android:id="@+id/timerCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/timer_count_placeholder"
        android:textSize="64sp"
        android:textColor="?textAppearanceCaption"
        app:layout_constraintBottom_toBottomOf="@+id/progress"
        app:layout_constraintEnd_toEndOf="@+id/progress"
        app:layout_constraintStart_toStartOf="@+id/progress"
        app:layout_constraintTop_toTopOf="@+id/progress" />

    <TextView
        android:id="@+id/timerInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/progress"
        app:layout_constraintStart_toStartOf="@+id/progress"
        app:layout_constraintTop_toBottomOf="@+id/timerCount" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/minutePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:np_dividerColor="?attr/colorControlNormal"
        app:np_max="99"
        app:np_min="1"
        app:np_selectedTextColor="?textAppearanceCaption"
        app:np_textColor="?textAppearanceCaption"
        app:np_textSize="20sp"
        app:np_selectedTextSize="30sp"
        app:np_dividerDistance="50dp"
        app:np_orientation="vertical"
        app:np_wrapSelectorWheel="false"
        app:np_value="1"
        app:layout_constraintEnd_toStartOf="@+id/timerCount"
        app:layout_constraintTop_toTopOf="@+id/timerCount"
        app:layout_constraintBottom_toBottomOf="@+id/timerCount"
        />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/secondsPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:np_dividerColor="?attr/colorControlNormal"
        app:np_max="99"
        app:np_min="1"
        app:np_selectedTextColor="?textAppearanceCaption"
        app:np_textColor="?textAppearanceCaption"
        app:np_textSize="20sp"
        app:np_selectedTextSize="30sp"
        app:np_dividerDistance="50dp"
        app:np_orientation="vertical"
        app:np_wrapSelectorWheel="false"
        app:np_value="1"

        app:layout_constraintStart_toEndOf="@+id/timerCount"
        app:layout_constraintTop_toTopOf="@+id/timerCount"
        app:layout_constraintBottom_toBottomOf="@+id/timerCount"
        />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="40dp"
        app:cpb_background_progressbar_color_direction="top_to_bottom"
        app:cpb_background_progressbar_color_end="#CFCFCF"
        app:cpb_background_progressbar_color_start="#B8B8B8"
        app:cpb_background_progressbar_width="20dp"
        app:cpb_progress_direction="to_right"
        app:cpb_progressbar_color="#3f51b5"
        app:cpb_progressbar_width="20dp"
        app:cpb_round_border="true"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnSettings"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="10dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_settings_outlined"
        android:contentDescription="@string/config_button_hint"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>